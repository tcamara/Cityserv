<div id="contact_list">
  <table cellpadding="0" cellspacing="0">
      <tr>
        <th></th>
        <th>
          Name
        </th>
        <th>
          Job
        </th>
        <th>
          Phone
        </th>
        <th>
          Email
        </th>

      </tr>
      <% @sorted_contacts.each do |i| %>
      <tr class="<%= cycle("even","odd") %>">
        <td class="noborder"><%= link_to 'View', contact_path(i.id) %></td>
        <td><%= i.first_name %> <%= i.last_name %></td>
        <td><%= i.job_title %></td>
        <td><%= i.work_phone %></td>
        <td><%= i.email %></td>
      </tr>
      <% end %>
  </table>
</div>