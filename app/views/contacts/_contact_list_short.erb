<table cellpadding="0" cellspacing="0">
    <tr>
      <th></th>
      <th <%= sort_td_class_helper "first_name" %>>
        <%= sort_link_helper "First Name", "first_name" %>
      </th>
      <th <%= sort_td_class_helper "last_name" %>>
        <%= sort_link_helper "Last Name", "last_name" %>
      </th>
      <th <%= sort_td_class_helper "job_title" %>>
        <%= sort_link_helper "Job Title", "job_title" %>
      </th>
      <th <%= sort_td_class_helper "company_name" %>>
        <%= sort_link_helper "Company", "company_name" %>
      </th>

    </tr>
    <% @sorted_contacts.each do |i| %>
    <tr class="<%= cycle("even","odd") %>">
      <td class="noborder"><%= link_to 'View', contact_path(i.id) %></td>
      <td><%= i.first_name %></td>
      <td><%= i.last_name %></td>
      <td><%= i.job_title %></td>
      <td><%= i.company_name %></td>
    </tr>
    <% end %>
</table>
