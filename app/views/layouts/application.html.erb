<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN"
   "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <title>CityServ - <%= yield(:title) || "Replacing TP" %></title>
    <%= stylesheet_link_tag 'style' %>
    <%= stylesheet_link_tag 'calendar_date_select/default' %>
    <%= stylesheet_link_tag 'in_place_styles' %>

    <%= javascript_include_tag :defaults, :cache => 'all' %>
    <%= javascript_include_tag 'calendar_date_select/calendar_date_select' %>

  </head>
  <body>
    <div id="content">
      <div id="login_area" class="float_right">
        <% if @current_user %>
          Welcome, <%= @current_user.first_name %> <%= @current_user.last_name %> <%= link_to "(Logout)", session_path, :method => :delete %>
        <% else %>
          <%= link_to 'Login', new_session_path %>
        <% end %>
      </div>
      <h1 class="center" id="title"><%= link_to image_tag("logo.png", :border => 0), properties_path %></h1>

      <div id="nav">
        <div id="nav_span">
          <%= link_to image_tag('browse_properties.png', :border => 0), :controller => 'properties', :action => 'list' %>
          <%= link_to image_tag('find_properties.png', :border => 0), :controller => 'properties', :action => 'search' %>
          <%= link_to image_tag('add_properties.png', :border => 0), new_property_path %>
          <%= link_to image_tag('browse_contacts.png', :border => 0), contacts_path %>
          <%= link_to image_tag('find_contacts.png', :border => 0), :controller => 'contacts', :action => 'search' %>
          <%= link_to image_tag('add_contacts.png', :border => 0), new_contact_path %>
        </div>
      </div>

      <% unless flash[:notice].blank? %>
        <div id="notification"><%= flash[:notice] %></div>
      <% end %>

        <h2><%= yield(:title) %></h2>
      <%= yield(:content) or yield %>
    </div>
  </body>
</html>


