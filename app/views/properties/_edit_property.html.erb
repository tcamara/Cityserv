<h2>Edit Property</h2>
<br />

<script type="text/javascript">
  document.observe('dom:loaded', function(event) {
    Editable.setupAll();
  });
</script>

<%= error_messages_for 'property' %>

<%= form_tag( :controller => 'properties', :action => 'edit' ) %>

<table id="property_edit">
  <tr>
    <td class="valign_top">
      <h3>Address</h3>
      <table>
        <tr>
          <td>#</td>
          <td><%= edit_in_place(@property, :street_num) %></td>
        </tr>
        <tr>
          <td>Street Name</td>
          <td><%= edit_in_place(@property, :street) %></td>
        </tr>
        <tr>
          <td>City</td>
          <td><%= edit_in_place(@property, :city) %></td>
        </tr>
        <tr>
          <td>State</td>
          <td><%= select :property, :state, %w(CA AL AK AS AZ AR CO CT DE DC FM FL GA GU HI ID IL IN IA KS KY LA ME MH MD MA MI MN MS MO MT NE NV NH NJ NM NY NC ND MP OH OK OR PW PA PR RI SC SD TN TX UT VT VI VA WA WV WI WY) %></td>
        </tr>
        <tr>
          <td>Zip</td>
          <td><%= edit_in_place(@property, :zip) %></td>
        </tr>
        <tr>
          <td>Unit</td>
          <td><%= edit_in_place(@property, :unit) %></td>
        </tr>
        <tr>
          <td>Floor</td>
          <td><%= edit_in_place(@property, :floor) %></td>
        </tr>
        <tr>
          <td>Building</td>
          <td><%= edit_in_place(@property, :building) %></td>
        </tr>
      </table>
      <br />

      <h3>Pricing</h3>
