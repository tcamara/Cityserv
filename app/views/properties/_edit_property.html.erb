          <td><%= edit_in_place(@property, :sale_price) %></td>
        </tr>
        <tr>
          <td>Price Range</td>
          <td><%= edit_in_place(@property, :price_range_low) %>-<%= edit_in_place(@property, :price_range_high) %></td>
        </tr>
        <tr>
          <td>Commission</td>
          <td><%= edit_in_place(@property, :commission) %></td>
        </tr>
      </table>
      <br />

      <h3>Financial</h3>
